{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Debug Build Examples",
            "command": "cargo build --examples",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Debug Build Akimo-Engine",
            "command": "cargo build --package akimo_engine",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Release Build Akimo-Engine",
            "command": "cargo build --release --package akimo_engine",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
            "group": "build"
        },
        {
            "label": "Format Code",
            "command": "cargo fmt",
            "type": "shell",
            "problemMatcher": [
                "$rustc"
            ],
        }
    ]
}